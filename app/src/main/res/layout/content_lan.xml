<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main" tools:context="sample.custom.LanActivity">

    <Button
        android:id="@+id/btnLanAnnounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_lan_share_file"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/btnLanDiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_lan_discover"

        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnLanAnnounce"
        android:id="@+id/lvDevices"/>

</RelativeLayout>
